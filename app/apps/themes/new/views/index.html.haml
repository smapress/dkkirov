%section#home-view.section-white
  .container
    #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
        %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
        %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
      / Wrapper for slides
      .carousel-inner
        .item.active
          %img{:alt => "...", :src => "http://placehold.it/800x400"}/
          .carousel-caption
            %h2 Heading
        .item
          %img{:alt => "...", :src => "http://placehold.it/800x400"}/
          .carousel-caption
            %h2 Heading
        .item
          %img{:alt => "...", :src => "http://placehold.it/800x400"}/
          .carousel-caption
            %h2 Heading
      / Controls
      %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-example-generic"}
        %span.fa.fa-angle-left
      %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-example-generic"}
        %span.fa.fa-angle-right
    .panel.panel-primary.no-line.contents
      .panel-heading Content
      .panel-body
        .row
          - current_site.the_post_types.decorate.each_with_index do |ptype, index|
            = raw "<div class='clearfix'></div>" if index%3 == 0 && index > 0
            .col-sm-6.col-md-4
              .thumbnail
                %a{:href => "#{ptype.the_url}"}
                  %img{:alt => "", :src => "#{ptype.the_thumb_url}", :style => "height: 200px; width: 100%; display: block;"}/
                .caption
                  %h4#thumbnail-label
                    %a{:href => "#{ptype.the_url}"}= ptype.the_title
                  %hr/
                  %p= raw ptype.the_excerpt
                  = ptype.the_edit_link
