%body
  %article#post
    %header.entry-header
      - if @post.has_thumb?
        .entry-thumbnail
          = raw @post.the_thumb
      %h1.dk-vi-title.entry-title= @post.the_title
    / .entry-header
    .entry-content
      = raw @post.the_content
    / .entry-content
    %footer.entry-meta
      / custom fields
      - if @post.render_fields.present?
        %hr/
        %h4= ct("extra_attributes", default: 'Extra Attributes')
        = raw @post.render_fields
    / .entry-meta
  / #post
  = render partial: 'partials/comments', locals: {post: @post} if @post.can_commented?
